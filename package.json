{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "npm run clean",
    "predeploy": "npm run build",
    "start": "node dist/index.js",
    "dev": "concurrently \"tsc -w\" \"node --watch dist/index.js\"",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc --noEmit -p tsconfig.test.json",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "worker:dev": "wrangler dev src/worker.ts",
    "worker:build": "tsc && npm run build",
    "worker:deploy": "npm run build && wrangler deploy",
    "worker:deploy:production": "npm run build && wrangler deploy --env production",
    "worker:deploy:staging": "npm run build && wrangler deploy --env staging",
    "worker:secrets": "wrangler secret put EMAIL_USER && wrangler secret put EMAIL_PASS && wrangler secret put CORS_ORIGIN && wrangler secret put EMAIL_SERVICE && echo \"Do you want to set up OAuth2? (y/n)\" && read use_oauth2 && if [ \"$use_oauth2\" = \"y\" ]; then wrangler secret put OAUTH2_CLIENT_ID && wrangler secret put OAUTH2_CLIENT_SECRET && wrangler secret put OAUTH2_REFRESH_TOKEN; fi"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "googleapis": "^146.0.0",
    "helmet": "^8.0.0",
    "nodemailer": "^6.9.12",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "concurrently": "^9.1.2",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.8.6",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "3.5.3",
    "supertest": "^6.3.4",
    "typescript": "5.5.3",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8",
    "wrangler": "^4.0.0"
  }
}
