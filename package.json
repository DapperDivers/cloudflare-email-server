{
  "name": "cloudflare-email-server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:worker": "npm run build --workspace=packages/worker",
    "build:all": "npm run build && npm run build:worker",
    "clean": "npm run clean --workspaces",
    "clean:worker": "npm run clean --workspace=packages/worker",
    "clean:all": "npm run clean && npm run clean:worker",
    "clean:js": "node scripts/clean-js-files.js",
    "start": "npm run start --workspace=packages/express-server",
    "dev": "npm run dev --workspace=packages/express-server",
    "dev:worker": "npm run dev --workspace=packages/worker",
    "lint": "eslint \"**/*.ts\" --ignore-pattern \"node_modules/\" --ignore-pattern \"dist*/\"",
    "lint:fix": "eslint \"**/*.ts\" --ignore-pattern \"node_modules/\" --ignore-pattern \"dist*/\" --fix",
    "lint:express": "eslint \"packages/express-server/**/*.ts\" --ignore-pattern \"dist*/\"",
    "lint:worker": "eslint \"packages/worker/**/*.ts\" --ignore-pattern \"dist*/\"",
    "lint:shared": "eslint \"packages/shared/**/*.ts\" --ignore-pattern \"dist*/\"",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json}\"",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "worker:deploy": "npm run deploy --workspace=packages/worker",
    "worker:deploy:production": "npm run deploy:production --workspace=packages/worker",
    "worker:deploy:staging": "npm run deploy:staging --workspace=packages/worker"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Email server with Express and Cloudflare Worker deployment options",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vitest": "^0.3.26",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.5.3"
  }
}
