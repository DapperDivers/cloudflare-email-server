{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["src/__tests__/*"],
      "@middleware/*": ["src/middleware/*"],
      "@core/*": ["src/core/*"],
      "@adapters/*": ["src/adapters/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@schema/*": ["src/schema/*"],
      "@services/*": ["src/services/*"]
    },
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 