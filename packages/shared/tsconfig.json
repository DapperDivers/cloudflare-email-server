{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": "./src",
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./*"],
      "@shared-utils/*": ["./utils/*"],
      "@shared-types/*": ["./types/*"],
      "@shared-tests/*": ["./__tests__/*"],
      "@shared-services/*": ["./services/*"],
      "@shared-config/*": ["./config/*"],
      "@shared-adapters/*": ["./adapters/*"],
      "@shared-middleware/*": ["./middleware/*"],
      "@shared-schema/*": ["./schema/*"]
    }
  },
  "include": ["src/**/*"]
}
